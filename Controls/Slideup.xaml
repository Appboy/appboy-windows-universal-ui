<UserControl
    x:Class="AppboyUI.Universal.Controls.Slideup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppboyUI.Universal.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

  <UserControl.Resources>
    <ResourceDictionary Source="ms-appx:///AppboyUI/Assets/Styles/Appboy.xaml"/>
  </UserControl.Resources>

  <Border Style="{StaticResource Appboy.Slideup.Border}">
    <Grid Style="{StaticResource Appboy.Slideup.Grid}">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"></ColumnDefinition>
        <ColumnDefinition Width="Auto" ></ColumnDefinition>
      </Grid.ColumnDefinitions>
      <TextBlock x:Name="Message" x:FieldModifier="public" Grid.Column="0" Style="{StaticResource Appboy.Slideup.MessageTextBlock}"/>
      <Image x:Name="Chevron" x:FieldModifier="public" Grid.Column="1" Source="ms-appx:///AppboyUI/Assets/Images/Chevron/chevron.png" Style="{StaticResource Appboy.Slideup.ChevronImage}"/>
    </Grid>
  </Border>
</UserControl>
