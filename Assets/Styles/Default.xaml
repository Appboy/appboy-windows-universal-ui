  <!-- Global Feed Styles -->
  <Style x:Key="Appboy.Feed.FeedProgressRing" TargetType="ProgressRing">
    <Setter Property="Height" Value="100"/>
    <Setter Property="Width" Value="100"/>
  </Style>
  <Style x:Key="Appboy.Feed.NetworkErrorMessageTextBox" TargetType="TextBox">
