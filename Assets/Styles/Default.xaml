    <Setter Property="TextAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
  </Style>
  <Style x:Key="Appboy.Feed.FeedEmptyMessageTextBox" TargetType="TextBox">
