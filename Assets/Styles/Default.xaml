    <Setter Property="FontSize" Value="13"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="#80c7f4"/>
    <Setter Property="Margin" Value="0,5,5,0"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
